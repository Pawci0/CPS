<local:SignalPage x:Class="Visualization.CA"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Visualization"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CA">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Interpolation" HorizontalAlignment="Center"/>
        <lvc:CartesianChart Series="{Binding InterpolationCollection, Mode=OneWay}" Grid.Row="0" LegendLocation="None" Margin="10,10,10,10" 
                            DisableAnimations="True" IsManipulationEnabled="False" Hoverable="False" DataTooltip="{x:Null}"/>


        <Label Grid.Row="1" Content="Sinc reconstruction" HorizontalAlignment="Center"/>
        <lvc:CartesianChart Series="{Binding SincCollection, Mode=OneWay}" Grid.Row="1" LegendLocation="None" Margin="10,10,10,10" 
                            DisableAnimations="True" IsManipulationEnabled="False" Hoverable="False" DataTooltip="{x:Null}"/>


    </Grid>
</local:SignalPage>
